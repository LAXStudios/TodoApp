<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TodoApp.CustomControls.NavigationBarControl"
      HeightRequest="90" Margin="0, 20 , 0, 0" ColumnDefinitions="20*, 60*, 20*"
      x:Name="this">
    <ImageButton  Clicked="ImageButton_Clicked" Grid.Column="0" Source="back.svg" HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand" WidthRequest="50" HeightRequest="50"/>
    <Label Grid.Column="1" FontSize="Title" FontAttributes="Bold" Text="{Binding Source={x:Reference this}, Path=Title}" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
</Grid>
