<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:TodoApp.Model"
             xmlns:viewmodel="clr-namespace:TodoApp.ViewModel"
             xmlns:custom="clr-namespace:TodoApp.CustomControls"
             xmlns:converter="clr-namespace:TodoApp.Converter"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Maui;assembly=CommunityToolkit.Maui"
             x:Class="TodoApp.MainPage"
             x:DataType="viewmodel:MainPageViewModel"
             Title="Todos" BackgroundColor="{StaticResource Tertiary}" Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <converter:BoolToColorConverter x:Key="BCConverter"/>
    </ContentPage.Resources>

    <!--xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"-->
    <!--toolkit:SetFocusOnEntryCompletedBehavior.NextElement="{x:Reference btnAdd}"-->
    <Grid Padding="10" RowDefinitions="40*, 60*">
        <StackLayout Grid.Row="0" BackgroundColor="#151515" x:Name="stacklayout">
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding UnFocusCommand}" CommandParameter="{Binding Source={x:Reference stacklayout}}"/>
            </StackLayout.GestureRecognizers>
            <StackLayout HeightRequest="175" Orientation="Horizontal" Padding="10, 0, 10, 0">
                <Label Text="{Binding TitleLabel}" FontSize="32" VerticalOptions="CenterAndExpand"/>
                <ImageButton Source="settings.svg" HeightRequest="40" WidthRequest="40" HorizontalOptions="EndAndExpand" Command="{Binding SettingsCommand}"/>
            </StackLayout>
            <Grid ColumnDefinitions="70*, 30*" Padding="7" ColumnSpacing="5" HeightRequest="80">
                <!--<custom:OutlinedEntryControl Placeholder="Todo"/>-->
                <Border Margin="-2,3" Grid.Column="0" Padding="0" BackgroundColor="Transparent" StrokeShape="RoundRectangle 8" StrokeThickness="2" Stroke="{StaticResource Primary}"  HeightRequest="60">
                    <Entry x:Name="entry" Placeholder="Neues Todo" PlaceholderColor="Gray" TextColor="White" Margin="10" BackgroundColor="Transparent"/>
                </Border>
                <Button x:Name="btnAdd" Grid.Column="1" Text="Neu" Command="{Binding AddTodoCommand}" CommandParameter="{Binding Source={x:Reference entry}}" FontAttributes="Bold" TextTransform="Uppercase" FontSize="18" HeightRequest="57"/>
            </Grid>
        </StackLayout>
        <RefreshView Grid.Row="1" Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsRefreshing}" BackgroundColor="{StaticResource Secondary}">
            <ScrollView>
                <StackLayout Spacing="5">
                    <CollectionView ItemsSource="{Binding Todos}" BackgroundColor="#151515">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="model:Todo">
                                <StackLayout Padding="6">
                                    <Frame x:Name="frame" BackgroundColor="#222222" CornerRadius="12" BorderColor="#222222" Padding="0">
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainPageViewModel}}, Path=FrameCommand}" CommandParameter="{Binding Source={x:Reference checkBox}}"/>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainPageViewModel}}, Path=UpdateBoolCommand}" CommandParameter="{Binding .}"/>
                                        </Frame.GestureRecognizers>
                                        <StackLayout Orientation="Horizontal" Padding="0">
                                            <StackLayout Orientation="Horizontal" Padding="18">
                                                <CheckBox IsChecked="{Binding IsDone, Mode=TwoWay}" Color="White" x:Name="checkBox" />
                                                <Label Text="{Binding Title}" TextColor="White" VerticalTextAlignment="Center">
                                                </Label>
                                            </StackLayout>
                                            <Button x:Name="btnDelete" Text="Entfernen" TextColor="White" BackgroundColor="{StaticResource Green}" BorderWidth="0" FontAttributes="Bold"
                                                        IsVisible="{Binding IsChecked, Source={x:Reference checkBox}}"
                                                        CornerRadius="0" HorizontalOptions="EndAndExpand"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainPageViewModel}}, Path=DeleteCommand}"
                                                        CommandParameter="{Binding .}"/>
                                        </StackLayout>
                                    </Frame>
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!--Finished-->
                    <Grid ColumnDefinitions="90*, 10*" Margin="7, 0">
                        <Border Grid.Column="0" Stroke="Gray" BackgroundColor="Gray" StrokeThickness="1" HorizontalOptions="FillAndExpand" HeightRequest="1" StrokeShape="RoundRectangle 90"/>
                        <ImageButton Command="{Binding DeleteCacheListCommand}" Grid.Column="1" Source="trash.svg" HeightRequest="25" WidthRequest="25" HorizontalOptions="EndAndExpand"/>
                    </Grid>
                    <StackLayout BindableLayout.ItemsSource="{Binding CacheList}" BackgroundColor="#151515" >
                        <BindableLayout.ItemTemplate>
                            <DataTemplate x:DataType="model:Todo">
                                <StackLayout Padding="6">
                                    <Frame x:Name="frame" BackgroundColor="#222222" CornerRadius="12" BorderColor="#222222" Padding="0">
                                        <StackLayout Orientation="Horizontal" Padding="0">
                                            <StackLayout Orientation="Horizontal" Padding="18">
                                                <CheckBox IsChecked="True" Color="White" x:Name="checkBox" IsEnabled="False"/>
                                                <Label Text="{Binding Title}" TextColor="White" VerticalTextAlignment="Center"/>
                                            </StackLayout>
                                        </StackLayout>
                                    </Frame>
                                </StackLayout>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </StackLayout>
                </StackLayout>
                
            </ScrollView>
        </RefreshView>
        <Label Text="{Binding Labels}" IsVisible="{Binding IsDeveloperMode}" Grid.Row="1" Opacity="50" VerticalOptions="EndAndExpand"/>
    </Grid>
</ContentPage>
