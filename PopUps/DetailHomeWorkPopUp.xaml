<?xml version="1.0" encoding="utf-8" ?>
<mopup:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mopup="clr-namespace:Mopups.Pages;assembly=Mopups"
                 xmlns:viewmodel="clr-namespace:TodoApp.ViewModel"
             x:Class="TodoApp.PopUps.DetailHomeWorkPopUp"
             Title="DetailHomeWorkPopUp" CloseWhenBackgroundIsClicked="True" BackgroundColor="#80000000"
                 x:DataType="viewmodel:DetailsPopUpViewModel">
    <StackLayout BackgroundColor="{StaticResource Secondary}" Padding="15" HeightRequest="350" WidthRequest="300" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <Label Text="{Binding HomeWork.Subject}" VerticalOptions="Center" HorizontalOptions="Center" FontSize="35" FontAttributes="Bold"/>
            <Label Text="{Binding HomeWork.Combine}" VerticalOptions="Center" HorizontalOptions="Center" FontSize="30"/>
            <Label Text="{Binding HomeWork.HomeWorkDate}" VerticalOptions="Center" HorizontalOptions="Center" FontSize="30"/>
            <Label Text="{Binding HomeWork.Description}" VerticalOptions="Center" HorizontalOptions="Center" FontSize="30"/>
    </StackLayout>
</mopup:PopupPage>